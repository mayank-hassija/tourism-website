// backend/package.json

{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend API for the Tourism Website",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",              // Start server in production
    "dev": "nodemon server.js"              // Start server with live reload (development)
  },
  "dependencies": {
    "cors": "^2.8.5",                       // Enables Cross-Origin Resource Sharing
    "dotenv": "^16.0.3",                    // Load environment variables from .env
    "express": "^4.18.2",                   // Web framework for Node.js
    "mongoose": "^7.0.3"                    // MongoDB object modeling tool
  },
  "devDependencies": {
    "nodemon": "^3.0.2"                     // Automatically restarts server on file changes
  },
  "engines": {
    "node": ">=16"                          // Optional: enforce Node.js version compatibility
  }
}
